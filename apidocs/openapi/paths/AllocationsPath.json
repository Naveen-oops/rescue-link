{
    "get": {
      "tags": ["Allocations"],
      "summary": "List all allocations",
      "description": "Retrieve a list of all allocation records.",
      "responses": {
        "200": {
          "description": "A list of allocations",
          "content": {
            "application/json": {
              "schema": {
                  "type": "object",
                  "properties": {
                    "allocations": {
                      "type": "array",
                      "items": {
                        "$ref": "../components/schemas/Allocation.json"
                      }
                    }
                  }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["Allocations"],
      "summary": "Create a new allocation",
      "description": "Add a new allocation to the system.",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/Allocation.json"
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Allocation created successfully",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/Allocation.json"
              }
            }
          }
        }
      }
    },
    "put": {
          "tags": [
              "Allocations"
          ],
          "summary": "Update an allocation",
          "description": "Update an allocation's details by ID.",
          "parameters": [
              {
                  "name": "allocation_id",
                  "in": "path",
                  "required": true,
                  "schema": {
                      "type": "string",
                      "format": "uuid"
                  }
              }
          ],
          "requestBody": {
              "required": true,
              "content": {
                  "application/json": {
                      "schema": {
                          "$ref": "../components/schemas/Allocation.json"
                      }
                  }
              }
          },
          "responses": {
              "200": {
                  "description": "Allocation updated successfully",
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "../components/schemas/Allocation.json"
                          }
                      }
                  }
              }
          }
      },
    "delete": {
        "tags": [
            "Allocations"
        ],
        "summary": "Delete an allocation",
        "description": "Delete a specific allocation by ID.",
        "parameters": [
            {
                "name": "allocation_id",
                "in": "path",
                "required": true,
                "schema": {
                    "type": "string",
                    "format": "uuid"
                }
            }
        ],
        "responses": {
            "204": {
                "description": "Allocation deleted successfully"
            }
        }
    }
}